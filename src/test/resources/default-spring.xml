<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />
    <context:component-scan base-package="Takenoko"/>

    <import resource="ObjectivesGarden.xml"/>
    <import resource="ObjectivesPattern.xml"/>

    <bean name="gameStarter" class="Takenoko.GameStarter">
        <constructor-arg name="game" ref="gameTest"/>
    </bean>

    <bean name="gameTest" class="Takenoko.Game" scope="prototype">
        <constructor-arg index="0" ref="pandObjDeck"/>
        <constructor-arg index="1" ref="gardenObjDeck"/>
        <constructor-arg index="2" ref="patternObjDeck"/>
    </bean>

</beans>